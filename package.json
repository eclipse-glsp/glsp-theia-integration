{
  "name": "@eclipse-glsp/theia-integration",
  "version": "0.7.0",
  "description": "Glue code to integrate GLSP clients into Eclipse Theia",
  "license": "(EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0)",
  "keywords": [
    "theia-extension",
    "eclipse",
    "graphics",
    "diagram",
    "modeling",
    "visualization",
    "glsp",
    "diagram editor"
  ],
  "homepage": "https://www.eclipse.org/glsp",
  "bugs": "https://github.com/eclipse-glsp/glsp-theia-integration/issues",
  "author": {
    "name": "EclipseSource"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse-glsp/glsp-theia-integration.git"
  },
  "files": [
    "lib",
    "src",
    "css"
  ],
  "dependencies": {
    "@theia/core": "next",
    "@theia/editor": "next",
    "@theia/filesystem": "next",
    "@theia/messages": "next",
    "@theia/languages": "next",
    "@theia/monaco": "next",
    "@theia/process": "next",
    "@theia/workspace": "next",
    "sprotty-theia": "next",
    "@eclipse-glsp/client": "next"
  },
  "devDependencies": {
    "@types/node": "10.14.18",
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "typescript": "3.6.4"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "tsc && yarn run lint",
    "lint": "tslint -c ./configs/tslint.json --project ./tsconfig.json",
    "watch": "tsc -w",
    "publish:latest": "yarn publish --tag latest",
    "publish:next": "yarn publish --new-version \"$(semver $npm_package_version -i minor)-next.$(git rev-parse --short HEAD)\" --tag next"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/frontend-module"
    }
  ],
  "main": "lib/index",
  "types": "lib/index"
}
