{
  "name": "@eclipse-glsp/theia-integration",
  "version": "0.9.0",
  "description": "Glue code to integrate GLSP clients into Eclipse Theia",
  "license": "(EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0)",
  "engines": {
    "yarn": "1.0.x || >=1.2.1",
    "node": ">=10.11.0 <13"
  },
  "keywords": [
    "theia-extension",
    "eclipse",
    "graphics",
    "diagram",
    "modeling",
    "visualization",
    "glsp",
    "diagram editor"
  ],
  "author": {
    "name": "Eclipse GLSP"
  },
  "homepage": "https://www.eclipse.org/glsp/",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse-glsp/glsp-theia-integration.git"
  },
  "bugs": "https://github.com/eclipse-glsp/glsp/issues",
  "contributors": [
    {
      "name": "Tobias Ortmayr",
      "email": "tortmayr@eclipsesource.com",
      "url": "https://www.eclipsesource.com"
    }
  ],
  "files": [
    "lib",
    "src",
    "css"
  ],
  "dependencies": {
    "@eclipse-glsp/client": "next",
    "@theia/messages": "^1.0.0",
    "sprotty-theia": "next"
  },
  "devDependencies": {
    "rimraf": "^2.6.1",
    "typescript": "^3.9.2"
  },
  "scripts": {
    "prepare": "yarn  clean && yarn  build",
    "clean": "rimraf lib",
    "build": "tsc",
    "lint": "eslint -c ./.eslintrc.js --ext .ts ./src",
    "build:ci": "yarn clean && yarn build -o eslint.xml -f checkstyle",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/glsp-frontend-module",
      "backend": "lib/node/glsp-backend-module"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index",
  "types": "lib/index"
}
